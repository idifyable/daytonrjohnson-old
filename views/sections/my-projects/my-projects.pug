// My Projects
section.my-projects.padded
  h3 My Projects
  ul.my-projects.container.padded
    = allProjects
    each project in data.projects
      - var projectID = project.title.toLowerCase().replace(/ /g, '-');
      li(id=projectID)
        .image-wrapper
          img(src=project.image, alt=project.title)
        .wrapper
          h1 #{project.title}
          h2 Technologies Used
          ul.bulleted
            each tech in project.technologies_used
              li=tech
          .buttons
            if project.link_live
              a(href=project.link_live, target='_blank')
                button(type='button') View Live

            if project.link_repo
              a(href=project.link_repo, target='_blank')
                button(type='button') View Repo